# VM监控系统 - 后端环境配置

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=vm_monitor
DB_SSLMODE=disable

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# InfluxDB配置
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=vm-monitor-token
INFLUXDB_ORG=vm-monitor
INFLUXDB_BUCKET=metrics

# RabbitMQ配置
RABBITMQ_URL=amqp://admin:password@localhost:5672/

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=3600

# 应用配置
API_PORT=8080
API_MODE=debug

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
